<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.collection.sanjivani.DeliveryDetailsActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/constrain_layout_bg"
            android:isScrollContainer="true">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/allerta"
                android:text="Name"
                android:textColor="@color/colorTextView"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pinCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allerta"
                android:text="@string/pin_code"
                android:textColor="@color/colorTextView"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/nameTextView"
                app:layout_constraintTop_toBottomOf="@+id/deliveryUserCityEditText" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allerta"
                android:text="Email"
                android:textColor="@color/colorTextView"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/nameTextView"
                app:layout_constraintTop_toBottomOf="@+id/mobileNumberEditText" />

            <TextView
                android:id="@+id/deliveryAddressTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/allerta"
                android:text="Address (House No., Building, street, Area)"
                android:textColor="@color/colorTextView"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/nameTextView"
                app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

            <TextView
                android:id="@+id/stateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:text="State"
                android:textColor="@color/colorTextView"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/deliveryUserStateEditText"
                app:layout_constraintTop_toTopOf="@+id/cityTextView" />

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allerta"
                android:text="@string/city"
                android:textColor="@color/colorTextView"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/nameTextView"
                app:layout_constraintTop_toBottomOf="@+id/deliveryAddress1EditText" />

            <TextView
                android:id="@+id/mobileNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/allerta"
                android:text="Mobile Number"
                android:textColor="@color/colorTextView"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/editText2"
                app:layout_constraintTop_toBottomOf="@+id/changeNameEditText" />

            <EditText
                android:id="@+id/deliveryAddress1EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTexxt"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/changeNameEditText"
                app:layout_constraintStart_toStartOf="@+id/deliveryAddressTextView"
                app:layout_constraintTop_toBottomOf="@+id/deliveryAddressTextView" />

            <EditText
                android:id="@+id/deliveryUserCityEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTexxt"
                android:drawableTint="#FF0057"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/cityTextView"
                app:layout_constraintTop_toBottomOf="@+id/cityTextView"
                app:layout_constraintWidth_percent="0.42" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTexxt"
                android:ems="10"
                android:foregroundTint="#DA00FF"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="@+id/changeNameEditText"
                app:layout_constraintStart_toStartOf="@+id/emailTextView"
                app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

            <EditText
                android:id="@+id/deliveryUserPinCodeEditText2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTexxt"
                android:ems="10"
                android:foregroundTint="#DA00FF"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/changeNameEditText"
                app:layout_constraintStart_toStartOf="@+id/pinCodeTextView"
                app:layout_constraintTop_toBottomOf="@+id/pinCodeTextView" />

            <EditText
                android:id="@+id/mobileNumberEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTexxt"
                android:ems="10"
                android:foregroundTint="#DA00FF"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="@+id/changeNameEditText"
                app:layout_constraintStart_toStartOf="@+id/mobileNumberTextView"
                app:layout_constraintTop_toBottomOf="@+id/mobileNumberTextView" />

            <EditText
                android:id="@+id/changeNameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/colorEditTexxt"
                android:ems="10"
                android:foregroundTint="#DA00FF"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/nameTextView"
                app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

            <EditText
                android:id="@+id/deliveryUserStateEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTexxt"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/changeNameEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stateTextView"
                app:layout_constraintWidth_percent="0.42" />

            <Button
                android:id="@+id/saveAddressButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/my_button"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Save Address"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deliveryUserPinCodeEditText2"
                app:layout_constraintWidth_percent="0.7" />

            <ProgressBar
                android:id="@+id/deliveryProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saveAddressButton" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/pin_view_bg"
                android:ems="10"
                android:hint="+91"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/mobileNumberEditText"
                app:layout_constraintStart_toStartOf="@+id/nameTextView"
                app:layout_constraintTop_toTopOf="@+id/mobileNumberEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>