<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_bg_one"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    tools:showIn="@layout/activity_navigation">

    <TextView
        android:id="@+id/navHeaderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:fontFamily="@font/allerta"
        android:text="Hush Sharma"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <TextView
        android:id="@+id/navHeaderPhoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#000000"
        android:fontFamily="@font/allerta"
        android:text="+91 9098909899"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/navHeaderNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/navHeaderNameTextView" />

    <TextView
        android:id="@+id/navHeaderEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#000000"
        android:fontFamily="@font/allerta"
        android:text="hakdjskaj@gmail.com"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/navHeaderPhoneNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/navHeaderPhoneNumberTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
