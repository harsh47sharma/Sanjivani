<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collection.sanjivani.CaptureUserInformation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <View
                android:id="@+id/topView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/waveView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_wave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topView" />

            <TextView
                android:id="@+id/userInfoHeadingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/capture_user_info_heading"
                android:textColor="#000000"
                android:textSize="30sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.08"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/waveView"
                app:layout_constraintWidth_percent="0.5" />

            <EditText
                android:id="@+id/userNameEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/user_info_name"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userInfoHeadingTextView"
                app:layout_constraintVertical_bias="0.288"
                app:layout_constraintWidth_percent="0.8" />

            <EditText
                android:id="@+id/userEmailEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/user_info_email"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userNameEditText"
                app:layout_constraintWidth_percent="0.8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="16dp"
                android:paddingStart="2dp"
                android:text="Fill Up Your Address Details"
                android:textColor="#000000"
                android:textSize="18sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintHeight_percent="0.08"
                app:layout_constraintWidth_percent="0.6"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="459dp" />

            <EditText
                android:id="@+id/streetEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/round_border"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/street"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintWidth_percent="0.4"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="561dp" />

            <EditText
                android:id="@+id/buildingEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/round_border"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/building"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintWidth_percent="0.4"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="503dp" />

            <EditText
                android:id="@+id/closestLandmarkEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/round_border"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/closest_landmark"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="@+id/pinCodeEditText"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintStart_toStartOf="@+id/streetEditText"
                tools:layout_editor_absoluteY="619dp" />

            <EditText
                android:id="@+id/pinCodeEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/round_border"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/pin_code"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintWidth_percent="0.4"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="561dp" />

            <EditText
                android:id="@+id/stateEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/round_border"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/state"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintWidth_percent="0.4"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="677dp" />

            <EditText
                android:id="@+id/cityEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/round_border"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/city"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintWidth_percent="0.4"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="677dp" />

            <EditText
                android:id="@+id/flatNoEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/flat_number"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintWidth_percent="0.4"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="503dp" />

            <Button
                android:id="@+id/createProfileButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:background="@drawable/my_button"
                android:text="@string/create_profile"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <ProgressBar
                android:id="@+id/userInfoProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="182dp"
                tools:layout_editor_absoluteY="802dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="487dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
