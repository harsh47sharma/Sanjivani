<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.collection.sanjivani">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>

        <activity
            android:name=".OrderInformationActivity"
            android:label="Order Information"
            />
        <activity
            android:name=".MyOrdersActivity"
            android:label="My Orders"
            />
        <activity
            android:name=".UploadPrescriptionActivity"
            android:label="Upload Prescription"
            />

        <activity android:name=".AdminActivity"/>

        <activity
            android:name=".DeliveryDetailsActivity"
            android:label="Change Address"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".PlaceOrderActivity"
            />
        <activity
            android:name=".PlaceOrderActivity"
            android:label="Place Order"
            android:parentActivityName=".CartActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SearchDrugActivity"
            android:label="Search Durg"
            android:parentActivityName=".NavigationActivity" />
        <activity
            android:name=".CartActivity"
            android:label="Cart"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".NavigationActivity" />
        <activity
            android:name=".DrugInformationActivity"
            android:label="Drug Information"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".SearchDrugActivity" />
        <activity
            android:name=".NavigationActivity"
            android:label=""
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".NavigationActivity" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Edit Profile"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".NavigationActivity" />
        <activity
            android:name=".CaptureUserInformation"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".PhoneLoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".VerificationActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>